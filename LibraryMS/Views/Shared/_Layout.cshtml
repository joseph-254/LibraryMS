        @Scripts.Render("~/bundles/bootstrap")*@

    <script src="@Url.Content("~/Content/assets/js/core/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/core/popper.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/core/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/plugins/perfect-scrollbar.jquery.min.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
